<div class="mt-4">
    <h3>Tất cả tài khoản</h3>
    <a href="/me/trash/accounts">Tài khoản vô hiệu hóa</a>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Tên người dùng</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col" colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                {{#if this.isAdmin}}
                {{else}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.email}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        {{!-- <a href="/auth/{{this._id}}/edit" class="btn btn-link">Sửa</a>     --}}
                        <a href="/auth" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-account-modal">Vô hiệu hóa</a>
                    </td>
                </tr>
                {{/if}}
            {{/each}}
        </tbody>
</table>
</div>

{{!-- Confirm delete account --}}
<div id="delete-account-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Vô hiệu hóa ?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Bạn chắc chắn muốn vô hiệu hóa tài khoản này?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-account" type="button" class="btn btn-danger">Xác nhận</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>

{{!-- Delete hidden form --}}
<form name="delete-account-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function() {
        var userId
        var deleteForm = document.forms['delete-account-form']
        var btnDeleteAccount = document.getElementById('btn-delete-account')
        //When dialog confirm click
        $('#delete-account-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        userId = button.data('id') 
    })

    btnDeleteAccount.onclick = function() {
        deleteForm.action = '/auth/' + userId + '/delete?_method=DELETE'
        deleteForm.submit();
    }
})
</script>