<div class="container">
    <div class="mt-4">
        <h3 class="text-center">Cấp lại mật khẩu</h3>
        <form method="POST" action="/auth/password/reset/send">
            <input type="hidden" value="{{token}}" name="token">
            <div class="form-group">
                <label for="email">Email tài khoản</label>
                <input type="email" class="form-control" value="{{email}}" id="email" name="email" readonly required>
            </div>
            <div class="form-group">
                <label for="password">Nhập mật khẩu</label>
                <input type="password" class="form-control form-control-lg rounded" name="password" id="password" placeholder="Password">
            </div>
            <button type="submit" class="btn btn-primary">Xác nhận</button>
        </form>
    </div>
</div>