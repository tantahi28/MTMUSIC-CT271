<div class="mt-4">
    <h3>Chỉnh sửa tài khoản</h3>
    <form method="POST" action="/auth/{{user._id}}?_method=PUT">
    {{#if conflictError}}
            <div class="alert alert-danger">{{conflictError}}</div>
    {{/if}}
        <div class="form-group">
            <label for="email">Email tài khoản</label>
            <input type="email" class="form-control" value="{{user.email}}" id="email" name="email" readonly required>
        </div>
        <div class="form-group">
            <label for="name">Tên hiển thị</label>
            <input type="text" class="form-control" value="{{user.name}}" id="name" name="name" required>
        </div>
        <div class="form-group">
            <label for="urlAvt">Thay đổi ảnh đại diện</label>
            <img src="{{user.urlAvt}}" alt="{{user.name}}"  style="max-width: 200px; margin:5px 0 5px 0 ; display: block;">
            <input type="text" class="form-control" value="{{user.urlAvt}}" id="urlAvt" name="urlAvt">
        </div>
        <div class="form-group">
            <label for="passwordOld">Nhập mật khẩu cũ</label>
            <input type="password" class="form-control form-control-lg rounded" name="passwordOld" minlength="8" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$" required>
        </div>
        <div class="form-group">
            <label for="password">Nhập mật khẩu mới<span class="font-italic small">(ít nhất 8 ký tự số, chữ thường và in hoa):</span></label>
            <input type="password" class="form-control form-control-lg rounded" name="password" minlength="8" pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[a-zA-Z]).{8,}$" required>
        </div>
        <div class="form-group">
            <label for="passwordConfirm">Nhập lại mật khẩu:</label>
            <input type="password" class="form-control form-control-lg rounded" id="passwordConfirm" name="passwordConfirm" minlength="8" required>
        </div>
        
        <button type="submit" class="btn btn-primary">Lưu lại</button>
    </form>
</div>

<script>
    const password = document.querySelector('input[name="password"]');
    const confirmPassword = document.querySelector('input[name="passwordConfirm"]');
    console.log(password, confirmPassword)
    function validatePassword() {
    if (password.value !== confirmPassword.value) {
        confirmPassword.setCustomValidity("Mật khẩu không khớp");
    } else {
        confirmPassword.setCustomValidity('');
    }
    }

    password.addEventListener('change', validatePassword);
    confirmPassword.addEventListener('keyup', validatePassword);


</script>