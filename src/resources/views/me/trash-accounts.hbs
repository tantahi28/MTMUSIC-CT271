<div class="mt-4">
    <a href="/me/stored/accounts">Danh sách tài khoản</a>
    <h3>Tài khoản đã vô hiệu hóa</h3>
    <table class="table mt-4">
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Email</th>
                <th scope="col">Tên người dùng</th>
                <th scope="col">Thời gian tạo</th>
                <th scope="col" colspan="2"></th>
            </tr>
        </thead>
        <tbody>
            {{#each users}}
                <tr>
                    <th scope="row">{{sum @index 1}}</th>
                    <td>{{this.email}}</td>
                    <td>{{this.name}}</td>
                    <td>{{this.createdAt}}</td>
                    <td>
                        <a href="" class="btn btn-link btn-restore" data-id="{{this._id}}">Khôi phục</a>
                        <a href="" class="btn btn-link" data-toggle="modal" data-id="{{this._id}}" data-target="#delete-account-modal">Xóa vĩnh viễn</a>
                    </td>
                </tr>
            {{else}}
                <tr>
                    <td colspan="5" class="text-center">
                        Chưa có tài khoản nào bị vô hiệu hóa! 
                        <a href="/me/stored/accounts">Danh sách tài khoản</a>
                    </td>
                </tr>
            {{/each}}
        </tbody>
</table>
</div>

{{!-- Confirm delete account --}}
<div id="delete-account-modal" class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title">Xóa khóa học?</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Hành động này không thể khôi phục. Bạn vẫn muốn xóa bài hát này?</p>
      </div>
      <div class="modal-footer">
        <button id="btn-delete-account" type="button" class="btn btn-danger">Xóa vĩnh viễn</button>
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Hủy</button>
      </div>
    </div>
  </div>
</div>


<form name="delete-account-form" method="POST"></form>
<form name="restore-account-form" method="POST"></form>

<script>

    document.addEventListener('DOMContentLoaded', function() {
        var userId
        var deleteForm = document.forms['delete-account-form']
        var restoreForm = document.forms['restore-account-form']
        var btnDeleteAccount = document.getElementById('btn-delete-account')
        var restoreBtn = $('.btn-restore')

        //When dialog confirm click
        $('#delete-account-modal').on('show.bs.modal', function (event) {
        var button = $(event.relatedTarget) 
        userId = button.data('id') 
    })
    //When delete account btn clicked
    btnDeleteAccount.onclick = function() {
        deleteForm.action = '/auth/' + userId + '/force?_method=DELETE'
        deleteForm.submit();
    }
    //Restore btn clicked
    restoreBtn.click(function (e) {
        e.preventDefault();
        var userId = $(this).data('id');
        deleteForm.action = '/auth/' + userId + '/restore?_method=PATCH';
        deleteForm.submit();
    })
})
</script>